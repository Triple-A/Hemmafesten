<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.hemmafesten"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.chalmers.hemmafesten.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.chalmers.hemmafesten.PartyActivity"
            android:label="@string/title_activity_party"
            android:parentActivityName="se.chalmers.hemmafesten.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.hemmafesten.MainActivity" />
        </activity>

        <service
            android:name="se.chalmers.hemmafesten.PartyService"
            android:label="@string/service_name"
            android:process=":party_service" >
        </service>

        <activity
            android:name="se.chalmers.hemmafesten.ActionBarActivity"
            android:label="@string/title_activity_action_bar"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="se.chalmers.hemmafesten.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleInstance" >
        </activity>
    </application>

</manifest>